<h1>Rider Dashboard</h1>
<% if @active_ride == nil %>
  <%= link_to 'Request a Ride', new_ride_path %>
<% else %>
  <div class="row">
    <div class="col s10 offset-s1">
      <ul class="collection with-header"> 
        <li class="collection-header center"><h4>Current Ride</h4></li>
        <li class=collection-item>Pickup: <%= @active_ride.pickup %> |
          Dropoff: <%= @active_ride.dropoff %> |
          Passengers: <%= @active_ride.passengers %> |
          <% if @active_ride.status != "active" %>
            Driver: <%= @driver.name %>
          Car Info: <%= @driver.car_model %>, <%= @driver.car_make %>
          <% end %><span><i class="secondary-content">Status: <%= @active_ride.status %></i></span></li>
      </ul>
    </div>
  </div>
<% end %>

